<h3 class="d-flex justify-content-between">{{{viewTitle}}} <a class="btn btn-secondary" href="/quotes"><i class="fa fa-plus"></i> Add New</a> </h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Quote</th>
            <th>Author</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
        <td>{{this.quote}}</td>
        <td>{{this.author}}</td>
        <td class="d-flex">
            <a href='/{{this._id}}' class="px-1 update"><i class="fa fa-pencil-alt fa-lg" aria-hidden="true"></i></a>
            <a href='/delete/{{this._id}}' onclick="return confirm('Are you sure you want to delete this?')" class="px-1 delete"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
        </td>
        </tr>
        {{/each}}
    </tbody>
</table>
